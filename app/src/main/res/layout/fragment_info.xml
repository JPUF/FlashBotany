<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".info.InfoFragment">

        <androidx.viewpager.widget.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tabMode="scrollable">

                <com.google.android.material.tabs.TabItem
                        android:id="@+id/familyTab1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rosaceae" />

                <com.google.android.material.tabs.TabItem
                        android:id="@+id/familyTab2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asteraceae" />

                <com.google.android.material.tabs.TabItem
                        android:id="@+id/familyTab3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Boraginaceae" />

                <com.google.android.material.tabs.TabItem
                        android:id="@+id/familyTab4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lamiaceae" />
            </com.google.android.material.tabs.TabLayout>

        </androidx.viewpager.widget.ViewPager>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>